<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".MainActivityStudent">

    <Button
        android:id="@+id/quizzes"
        android:layout_width="169dp"
        android:layout_height="128dp"
        android:layout_gravity="start"
        android:backgroundTint="#FF5722"
        android:enabled="true"
        android:fontFamily="@font/press_start_2p"
        android:onClick="toQuiz"
        android:text="@string/quizzes"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/forumBtn"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stdprof"
        app:layout_constraintVertical_bias="0.136"
        app:strokeColor="#6C3625"
        app:strokeWidth="3dp"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/pp"
        android:layout_width="169dp"
        android:layout_height="128dp"
        android:layout_gravity="start"

        android:backgroundTint="#E91E63"
        android:enabled="true"
        android:fontFamily="@font/press_start_2p"
        android:onClick="toPassPapers"
        android:text="@string/past_papers"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29"
        app:strokeColor="#710C04"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/forumBtn"
        android:layout_width="169dp"
        android:layout_height="128dp"
        android:layout_gravity="start"
        android:backgroundTint="#4CAF50"
        android:enabled="true"
        android:fontFamily="@font/press_start_2p"
        android:onClick="toForum"
        android:text="@string/forum"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pp"
        app:layout_constraintVertical_bias="0.136"
        app:strokeColor="#0D6010"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/stdprof"
        android:layout_width="169dp"
        android:layout_height="128dp"
        android:layout_gravity="start"
        android:backgroundTint="#673AB7"
        android:enabled="true"
        android:fontFamily="@font/press_start_2p"
        android:onClick="toProfile"
        android:text="Profile"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pp"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29"
        app:strokeColor="#3F51B5"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="417dp"
        android:layout_height="47dp"
        android:background="#00BCD4"
        android:fontFamily="@font/autour_one"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#673AB7"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="@font/margarine"
        android:gravity="center"
        android:text="@string/men"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textColorHighlight="@color/purple_200"
        android:textColorHint="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nameOfStd"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:fontFamily="@font/margarine"
        android:gravity="center|center_vertical"
        android:text="@string/name"
        android:textColor="#8F1007"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <TextView
        android:id="@+id/gradeOfStd"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:fontFamily="@font/autour_one"
        android:gravity="right|center_vertical"
        android:text="Grade"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <TextView
        android:id="@+id/userOfStd"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:fontFamily="@font/autour_one"
        android:gravity="left|center_vertical"
        android:text="User"
        android:textColor="#FFEB3B"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

</androidx.constraintlayout.widget.ConstraintLayout>